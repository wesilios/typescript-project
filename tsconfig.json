{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["dom", "es2016", "es2017.object"],
      "rootDir": "src",
      "target": "es5",
      "outDir": "dist",
      "noImplicitAny": false
    },
    "compileOnSave": true,
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
